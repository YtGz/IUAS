<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iuas.MainActivity" >

    <TextView
        android:id="@+id/textLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!-- 
    <EditText
        android:id="@+id/programId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:text="0"
        android:inputType="numberSigned" />
        -->
    
     <EditText
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:text="0"
        android:inputType="numberSigned" />
     
      <EditText
        android:id="@+id/y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/x"
        android:ems="10"
        android:text="0"
        android:inputType="numberSigned" />
      
      <EditText
        android:id="@+id/phi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/y"
        android:ems="10"
        android:text="0"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/run"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/phi"
        android:layout_centerHorizontal="true"
        android:onClick="runOnClick"
        android:text="run" />
            <!-- android:layout_below="@+id/programId" -->

    <Button
        android:id="@+id/ballCatching"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="ballCatchingOnClick"
        android:text="Hol is Balli" />
    
    <Button
        android:id="@+id/switchActivity"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/ballCatching"
        android:layout_alignLeft="@+id/ballCatching"
        android:layout_below="@+id/ballCatching"
        android:layout_marginTop="16dp"
        android:onClick="switchActivity"
        android:text="Choose Color" />

    <Spinner
        android:id="@+id/chooseColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/switchActivity"
        android:layout_below="@+id/switchActivity" />

</RelativeLayout>
